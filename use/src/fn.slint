  pure public function is-leap-year(year: int) -> bool {
      if Math.mod(year, 4) == 0 {
          if Math.mod(year, 100) == 0 {
              return Math.mod(year, 400) == 0;
          }
          return true;
      }
      return false;
  }
  // zeller algorithm to get days
  pure public function get-days(year: int, month: int, day: int) -> int {
    
    if month < 3 {
        return mod( day + floor((13 * ((month + 12) + 1)) / 5) + mod((year - 1) , 100) + floor(mod((year - 1) , 100) / 4) + floor((floor((year - 1) / 100)) / 4) - 2 * floor((year - 1) / 100) , 7);
    }
    return mod( day + floor((13 * (month + 1)) / 5) + mod(year , 100) + floor(mod(year , 100) / 4) + floor((floor(year / 100)) / 4) - 2 * floor(year / 100) , 7);
  }
  // get the day of the week
  pure public function get-weekday(year: int, month: int, day: int) -> int {
    return Math.mod((get-days(year, month, day) + 5), 7);
  }
