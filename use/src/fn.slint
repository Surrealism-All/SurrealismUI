    }else if(theme==Themes.Warning){
      UseSurrealismFn.warning-deeper(color)
    }else if(theme==Themes.Error){
      UseSurrealismFn.error-deeper(color)
    }else{
      UseSurrealismFn.dark-deeper(color)
    }
  }
